<% content_for :right do %>


<p id="notice"><%= notice %></p>

<%= link_to 'New User', new_user_path, class: 'btn_small_blue' %>


<table class="table table-hover table-bordered table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Username</th>
      <th>Email</th>
      <th>Role</th>
      <th>Level</th>
      <th>Login key</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <tr class="rowFilter">
      <th><input type="text" id="UserUsername" value="" maxlength="100" size="10" name="data[User][username]"></th>
      <th><input type="text" id="UserName" value="" size="10" name="data[User][name]"></th>
      <th><input type="text" id="UserEmail" value="" size="10" name="data[User][email]"></th>
      
      <th>
        <select name="data[User][group]">
          <option value="">--- All ---</option>

          <option value="1">admin</option>

          <option value="2">user</option>

        </select>
      </th>
      <th></th>
      <th></th>
      <th>
        <input type="image" style="margin-right:5px" title="filter" name="data[filter]" src="http://freshstudio.hiworld.com.vn/img/admin/filter.png">
        <input type="image" style="margin-right:5px" title="reset" name="data[reset]" src="http://freshstudio.hiworld.com.vn/img/admin/reset.png">
      </th>
    </tr>

    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.level %></td>
        <td><%= user.login_key %></td>
        <td>
        <%= link_to image_tag('view.png'), users_view_path(user) %>
        <%= link_to image_tag('edit.png'), edit_user_path(user) %>
        <%= link_to image_tag('delete.png'), user, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= will_paginate @users %>



</div>

<% end %>